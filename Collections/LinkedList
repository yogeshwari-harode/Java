import java.io.*;
import java.util.*;

public class Main {
    private static Scanner scn = new Scanner(System.in);
    private static Collection<String> list = new LinkedList<String>();

    public static void main(String[] args) {
        while (true) {
            System.out.println("1. Add item to list\n2. Delete item from list\n3. Exit");
            int choice = scn.nextInt();
            scn.nextLine();  // Consume newline character
            
            switch (choice) {
                case 1:
                    Add();
                    break;
                case 2:
                    Delete();
                    break;
                case 3:
                    System.out.println("Exiting...");
                    return;  // Exit the program
                default:
                    System.out.println("No Such Option Available");
                    break;
            }
        }
    }

    private static void Add() {
        System.out.println("Enter item to add:");
        String item = scn.nextLine();
        list.add(item);
        System.out.println("List after adding item: " + list);
    }

    private static void Delete() {
        System.out.println("Enter item to delete:");
        String item = scn.nextLine();
        if (list.remove(item)) {
            System.out.println("List after removing item: " + list);
        } else {
            System.out.println("Item not found in the list.");
        }
    }
}
