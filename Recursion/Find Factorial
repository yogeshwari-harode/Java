import java.util.*;
public class Main{
    public static int factorial(int n){
        if(n==0 || n==1){
            return 1;
        }
        return n*factorial(n-1);
    }
    public static void main (String[] args) {
        Scanner scn=new Scanner(System.in);
        System.out.println("Enter any number : ");
        int num=scn.nextInt();
        System.out.println(factorial(num));
    }
}
